{
	"extends": "@oly_op/tsconfig/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./",
		"lib": ["ESNext"],
		"paths": { "*": ["types/*"] }
	},
	"include": [
		"types",
		"webpack",
		"scripts"
	],
	"ts-node": {
		"files": true,
		"compilerOptions": {
			"target": "ES6",
			"baseUrl": "./",
			"module": "CommonJS",
			"paths": { "*": ["types/*"] }
		},
		"moduleTypes": {
			"webpack/**": "cjs",
			"scripts/**/*": "cjs"
		}
	}
}