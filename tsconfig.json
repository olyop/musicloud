{
	"extends": "@oly_op/tsconfig/tsconfig.json",
	"compilerOptions": {
		"jsx": "react",
		"jsxFactory": "createElement",
		"paths": { "*": ["./src/types/*"] }
	},
	"ts-node": {
		"files": true,
		"compilerOptions": {
			"target": "ES6",
			"module": "CommonJS",
			"paths": { "*": ["./src/types/*"] }
		},
		"moduleTypes": {
			"scripts/**/*": "cjs",
			"webpack.base.ts": "cjs",
			"webpack.player.ts": "cjs",
			"webpack.upload.ts": "cjs"
		}
	}
}