{
	"root": true,
	"overrides": [
		{
			"files": ["*.ts"],
			"extends": "../../../.eslintrc.json",
			"env": {
				"node": true
			},
			"parserOptions": {
				"project": "src/player/server/tsconfig.json"
			}
		},
		{
			"files": ["*.gql"],
			"extends": [
				"plugin:@graphql-eslint/schema-all",
				"@oly_op/eslint-config-graphql"
			],
			"parserOptions": {
				"operations": "src/player/client/src/**/*.gql",
				"schema": "src/player/server/src/type-defs/*.gql"
			}
		}
	]
}